{
    "$schema": "https://raw.githubusercontent.com/joostholslag/openEHRxNuts/refs/heads/main/Authorisation/access_policy.rego.schema.json",
    "READ": {
        "resource": {
            "template": {
                "ids": ["composition.acp", "composition.report"]
            }
        },
        "user_roles": [
            "doctor",
            "nurse"
        ]
    },
    "WRITE": {
        "resource": {
            "template": {
                "ids": ["composition.acp"]
            }
        },
        "user_roles": [
            "doctor"
        ]
    }
}